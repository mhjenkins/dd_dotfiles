Xcursor.theme: Paper
Xcursor.size: 16

Xft.autohint:   0
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault
Xft.hinting:    1
Xft.antialias:  1
Xft.rgba:       rgb

! Xscreensaver
xscreensaver.Dialog.*Font: xft:roboto mono:size=16

! URXVT {{

! Default window size
URxvt.geometry: 200x60

URxvt*title: urxvt
URxvt*termName: rxvt-unicode
URxvt*scrollTtyOutput:      false
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyKeypress:    true

! Font
URxvt.font: xft:Roboto Mono:pixelsize=16, xft:Roboto Mono for Powerline:pixelsize=16
URxvt.letterSpace: -1
URxvt.lineSpace: -1

! Set urxvt as login shell
URxvt*loginShell: true

! Scrollbar
URxvt*saveLines: 50000
URxvt*scrollstyle:plain
URxvt*scrollBar: false

! Plugins
URxvt.perl-ext-common: default,matcher,clipboard,tabbedex,resize-font,vtwheel

! URLS
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 3

! Tabs
URxvt.tabbed.autohide:  yes
URxvt.tabbed.new-button:  no
URxvt.tabbed.title: yes

! Tabbedex keybindings
URxvt.keysym.Shift-Control-T: perl:tabbedex:new_tab
URxvt.keysym.Control-Left: perl:tabbedex:prev_tab
URxvt.keysym.Control-Right: perl:tabbedex:next_tab
URxvt.keysym.Shift-Control-Left: perl:tabbedex:move_tab_left
URxvt.keysym.Shift-Control-Right: perl:tabbedex:move_tab_right
URxvt.keysym.Shift-Control-R: perl:tabbedex:rename_tab
URxvt.tabbed.no-tabbedex-keys: true

! Enables copy/paste with Ctrl-Shift-C/V
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

!
! effects
!
! use font glyphs
URxvt*skipBuiltinGlyphs:    true
! cursor underline
URxvt*cursorUnderline:      false
! cursor blinking
URxvt*cursorBlink:          false
! blank the pointer on keypress or timeout
URxvt*pointerBlank:         false


!
! misc
!
! triple click select only logical line
URxvt*tripleclickwords:   true
! delimiters for double-click selection
URxvt*cutchars:           BACKSLASH '"'&()*,;<=>?@[]^{|}
URxvt.intensityStyles: false

! Set terminal padding
URxvt.internalBorder: 10

! Custom {{
URxvt*foreground: #DEDEDE
URxvt*background: #2B2B2B
URxvt*colorUL: #86a2b0
! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
!URxvt*color1  : #CC0000
!URxvt*color9  : #EF2929
URxvt*color1  : #D64937
URxvt*color9  : #CC0000
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC
! }}

